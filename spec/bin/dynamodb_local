#!/bin/sh
dir=$(cd $(dirname $0);pwd)
dynamoDir=$dir/dynamodb

if [ ! -d $dynamoDir ]; then
  mkdir $dynamoDir
  wget http://dynamodb-local.s3-website-us-west-2.amazonaws.com/dynamodb_local_latest -P $dynamoDir
fi

if [ -f $dynamoDir/dynamodb_local_latest ]; then
  tar xzf $dynamoDir/dynamodb_local_latest -C $dynamoDir
  rm $dynamoDir/dynamodb_local_latest
fi

java -Djava.library.path=$dynamoDir/DynamoDBLocal_lib/ -jar $dynamoDir/DynamoDBLocal.jar  -port 4567 -dbPath /tmp/
